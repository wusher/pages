        src: url('{{ font_path("merriweather/Merriweather-Italic-VariableFont_opsz,wdth,wght.ttf") }}')
          format("truetype");
        font-weight: 100 900;
        font-style: italic;
      }
    </style>
    <link rel="stylesheet" href="{{ css_path('main') }}" />
  </head>
  <body class="min-h-screen flex flex-col">
    {% include "header.html.jinja" %}
    <main class="flex-1 px-6">
      <article class="prose max-w-prose mx-auto">
        {{ page_content | safe }}
      </article>
    </main>
    {% include "footer.html.jinja" %}
