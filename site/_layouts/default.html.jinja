      @font-face {
        font-family: "Merriweather";
        src: url('{{ font_path("merriweather/Merriweather-VariableFont_opsz,wdth,wght.ttf") }}')
          format("truetype");
        font-weight: 100 900;
        font-style: normal;
      }
      @font-face {
